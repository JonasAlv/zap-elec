{
  "name": "zap-elec",
  "version": "1.0.0",
  "description": "Simple web wrapper made with typescript and electron",
  "main": "dist/main.js",
  "scripts": {
    "start": "yarn tsc && electron .",
    "clean": "sudo rm -rf dist release node_modules",
    "tsc": "tsc",
    "build": "yarn run tsc && electron-builder",
    "docker-pull": "sudo docker pull electronuserland/builder",
    "docker": "sudo docker run --rm -it -v $PWD:/project -w /project electronuserland/builder bash",
    "docker-wine": "sudo docker run --rm -it -v $PWD:/project -w /project electronuserland/builder:wine bash",
    "chown": "sudo chown -R me:me dist release node_modules"
  },
  "author": {
    "name": "Jonas Alv",
    "email": "jonas001san@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^39",
    "electron-builder": "^26",
    "electron-builder-squirrel-windows": "^26",
    "typescript": "^5"
  },
  "build": {
    "asar": true,
    "appId": "com.zap-elec.app",
    "productName": "zap-elec",
    "files": [
      "dist/**",
      "!node_modules",
      "assets/icons/**"
    ],
    "extraResources": [
      {
        "from": "assets/icons",
        "to": "assets/icons"
      }
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "category": "Network",
      "target": [
        "rpm",
        "deb"
      ],
      "icon": "assets/icons",
      "maintainer": "Jonas Alv <jonas001san@gmail.com>",
      "synopsis": "Electron web wrapper"
    },
    "win": {
      "target": [
        "nsis" 
      ],
      "icon": "assets/icons/icon.ico"
    },
    "publish": null
  }
}

