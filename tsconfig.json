{
  "compilerOptions": {
    "incremental": false,
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "useDefineForClassFields": true,
    "types": ["node", "electron"]
  }
}
